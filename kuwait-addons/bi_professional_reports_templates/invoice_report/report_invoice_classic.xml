<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="classic_report_invoice_document">
            <t t-if="o and 'company_id' in o">
                <t t-set="company" t-value="o.company_id"></t>
            </t>
            <t t-if="not o or not 'company_id' in o">
                <t t-set="company" t-value="res_company"></t>
            </t>
            <div class="header">
                <div class="row mt32 mb32">
                    <div class="col-12 text-right" style="font:12px lucida-console,sans-serif !important;">
                        <img t-if="company.upload_image_header"
                             t-att-src="'data:image/png;base64,%s' % to_text(company.upload_image_header)"
                             style="max-height: 180px;"/>
                    </div>
                </div>
                <div class="row mt32 mb32">
                    <div class="col-12 text-right" style="font:12px lucida-console,sans-serif !important;">
                        <img t-if="company.logo" t-att-src="'data:image/png;base64,%s' % to_text(company.logo)"
                             style="max-height: 130px;"/>
                    </div>
                </div>
            </div>
            <div class="footer">
                <div class="row mt32 mb32">
                    <div class="col-12 text-right" style="font:12px lucida-console,sans-serif !important;">
                        <img t-if="company.upload_image_footer"
                             t-att-src="'data:image/png;base64,%s' % to_text(company.upload_image_footer)"
                             style="max-height: 180px;"/>
                    </div>
                </div>
            </div>


            <t t-call="web.external_layout">
                <t t-set="o" t-value="o.with_context({'lang':o.partner_id.lang})"/>
                <div class="page" style="font-family:Scheherazade;font-size:15px">
                    <t t-if="o.type == 'in_invoice'">
                        <center>
                            <h1>فاتورة شراء</h1>
                        </center>
                    </t>
                    <t t-if="o.type == 'in_refund'">
                        <center>
                            <h1>مردود شراء</h1>
                        </center>
                    </t>
                    <t t-if="o.type == 'out_invoice'">
                        <center>
                            <h1>فاتورة مبيعات</h1>
                        </center>
                    </t>
                    <t t-if="o.type == 'out_refund'">
                        <center>
                            <h1>مردود مبيعات</h1>
                        </center>
                    </t>

                    <div class="oe_structure"/>
                    <div>
                        <h3 >
                            <span t-field="o.name"/>
                        </h3>

                        <h3 style="margin-right:45px;">
                            التاريخ:
                            <span t-field="o.invoice_date"/>
                        </h3>

                        <table class="table table-sm" style=" table-layout:fixed;">
                            <thead>
                                <tr>
                                    <th width="30px"
                                        style="background-color:#3498DB !important;border: 1px !important; border-style: solid !important; border-color: #fff; color:#fff !important; ">
                                        الزبون
                                    </th>
                                    <th width="30px"
                                        style="background-color:#3498DB !important;border: 1px !important; border-style: solid !important; border-color: #fff; color:#fff !important; ">
                                        عنوان التسليم
                                    </th>
                                    <th width="20px"
                                        style="background-color:#3498DB !important;border: 1px !important; border-style: solid !important; border-color: #fff; color:#fff !important; ">
                                        المرجع / الوصف
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td style="border: 1px !important; border-style: solid !important; border-color: #fff !important;">
                                        <div t-field="o.partner_id"/>
                                        <t t-if="o.partner_id.street">
                                            <t t-esc="o.partner_id.street"/>
                                        </t>
                                        <br/>
                                        <t t-if="o.partner_id.street2">
                                            <t t-esc="o.partner_id.street2"/>
                                        </t>
                                        <br/>
                                        <t t-if="o.partner_id.city">
                                            <t t-esc="o.partner_id.city"/>
                                        </t>
                                        <br/>
                                        <t t-if="o.partner_id.state_id.name">
                                            <t t-esc="o.partner_id.state_id.name"/>
                                        </t>
                                        <br/>
                                        <t t-if="o.partner_id.country_id.name">
                                            <t t-esc="o.partner_id.country_id.name"/>
                                        </t>
                                        <br/>
                                        <t t-if="o.partner_id.zip">
                                            <t t-esc="o.partner_id.zip"/>
                                        </t>
                                        <br/>
                                        <div t-field="o.partner_id.vat"/>
                                    </td>
                                    <td style="border: 1px !important; border-style: solid !important; border-color: #fff !important;">
                                        <div t-field="o.partner_shipping_id"/>
                                        <t t-if="o.partner_id.street">
                                            <t t-esc="o.partner_shipping_id.street"/>
                                        </t>
                                        <br/>
                                        <t t-if="o.partner_shipping_id.street2">
                                            <t t-esc="o.partner_shipping_id.street2"/>
                                        </t>
                                        <br/>
                                        <t t-if="o.partner_shipping_id.city">
                                            <t t-esc="o.partner_shipping_id.city"/>
                                        </t>
                                        <br/>
                                        <t t-if="o.partner_shipping_id.state_id.name">
                                            <t t-esc="o.partner_shipping_id.state_id.name"/>
                                        </t>
                                        <br/>
                                        <t t-if="o.partner_shipping_id.country_id.name">
                                            <t t-esc="o.partner_shipping_id.country_id.name"/>
                                        </t>
                                        <br/>
                                        <t t-if="o.partner_shipping_id.zip">
                                            <t t-esc="o.partner_shipping_id.zip"/>
                                        </t>
                                        <br/>
                                        <div t-field="o.partner_shipping_id.vat"/>
                                    </td>
                                    <td style="border: 1px !important; border-style: solid !important; border-color: #fff !important;">
                                        <div t-field="o.name"/>
                                    </td>
                                </tr>
                            </tbody>
                        </table>

                        <table class="table table-sm" style=" table-layout:fixed; padding-top=20px;">
                            <thead>
                                <tr>
                                    <th width="30px"
                                        style="background-color:#3498DB !important;border: 1px !important; border-style: solid !important; border-color: #fff; color:#fff !important; ">
                                        تاريخ الاستحقاق
                                    </th>
                                    <th width="20px"
                                        style="background-color:#3498DB !important;border: 1px !important; border-style: solid !important; border-color: #fff; color:#fff !important; ">
                                        شروط الدفع
                                    </th>
                                    <th width="20px"
                                        style="background-color:#3498DB !important;border: 1px !important; border-style: solid !important; border-color: #fff; color:#fff !important; ">
                                        مندوب مبيعات
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td style="border: 1px !important; border-style: solid !important; border-color: #fff !important;">
                                        <div t-field="o.invoice_date_due"/>
                                    </td>
                                    <td style="border: 1px !important; border-style: solid !important; border-color: #fff !important;">
                                        <div t-field="o.invoice_payment_term_id"/>
                                    </td>
                                    <td style="border: 1px !important; border-style: solid !important; border-color: #fff !important;">
                                        <div t-field="o.user_id"/>
                                    </td>
                                </tr>
                            </tbody>
                        </table>

                        <div style="padding-top:20px;"></div>
                        <!-- Is there a discount on at least one line? -->
                        <t t-set="display_discount" t-value="any([l.discount for l in o.invoice_line_ids])"/>

                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th style="background-color:#3498DB !important;color:#FFF !important;">وصف
                                    </th>
                                    <th style="background-color:#3498DB !important;color:#FFF !important;">كمية</th>
                                    <th style="background-color:#3498DB !important;color:#FFF !important;">سعر الوحدة
                                    </th>
                                    <th style="background-color:#3498DB !important;color:#FFF !important;"
                                        t-if="display_discount"
                                        groups="sale.group_discount_per_so_line">الخصم.(%)
                                    </th>
                                    <th style="background-color:#3498DB !important;color:#FFF !important;">السعر</th>
                                </tr>
                            </thead>
                            <tbody class="invoice_tbody">
                                <tr t-foreach="o.invoice_line_ids" t-as="l">
                                    <td>
                                        <span t-field="l.name"/>
                                    </td>
                                    <td>
                                        <span t-field="l.quantity"/>
                                        <span t-field="l.uom_id" groups="product.group_uom"/>
                                    </td>
                                    <td>
                                        <span t-field="l.price_unit"/>
                                    </td>
                                    <td t-if="display_discount"
                                        groups="sale.group_discount_per_so_line">
                                        <span t-field="l.discount"/>
                                    </td>
                                    <td>
                                        <span t-field="l.price_subtotal"
                                              t-field-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div>
                        <div class="col-6 pull-right">
                            <table class="table table-condensed">
                                <tr class="border-black">
                                    <td>
                                        <strong>المجموع الفرعي</strong>
                                    </td>
                                    <td class="text-right">
                                        <span t-field="o.amount_untaxed"
                                              t-field-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/>
                                    </td>
                                </tr>
                                <t t-foreach="o.amount_by_group" t-as="amount_by_group">
                                    <tr>
                                        <td>
                                            <span t-esc="amount_by_group[0]"/>
                                        </td>
                                        <td class="text-right">
                                            <span t-esc="amount_by_group[1]"/>
                                        </td>
                                    </tr>
                                </t>
                                <tr class="border-black" style=" background-color: #3498DB; color:#fff !important;">
                                    <td>
                                        <strong>المجموع</strong>
                                    </td>
                                    <td class="text-right">
                                        <span t-field="o.amount_total"
                                              t-field-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/>
                                    </td>
                                </tr>
                                <t t-set="payments_vals" t-value="o.sudo()._get_reconciled_info_JSON_values()"/>
                                <t t-foreach="payments_vals" t-as="payment_vals">
                                    <tr>
                                        <td>
                                            <i class="oe_form_field text-right oe_payment_label">دفع في
                                                <t t-esc="payment_vals['date']" t-options='{"widget": "date"}'/>
                                            </i>
                                            <span t-esc="payment_vals['ref']"/>
                                        </td>
                                        <td class="text-right">
                                            <span t-esc="payment_vals['amount']"
                                                  t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                        </td>
                                    </tr>
                                </t>
                                <t t-if="len(payments_vals) > 0">
                                    <tr class="border-black">
                                        <td>
                                            <strong>المبلغ المستحق</strong>
                                        </td>
                                        <td class="text-right">
                                            <span t-field="o.amount_residual"/>
                                        </td>
                                    </tr>
                                </t>
                            </table>
                        </div>
                    </div>
                    <br/>
                    <br/>
                    <br/>
                    <div style="padding-top:50px;">
                    </div>
                    <p t-if="o.narration">
                        <strong>تعليق:</strong>
                        <span t-field="o.narration"/>
                    </p>
                    <p t-if="o.fiscal_position_id.note">
                        <strong>ملاحظة الموقف المالي:</strong>
                        <span t-field="o.fiscal_position_id.note"/>
                    </p>
                    <table class="table table-sm" style=" table-layout:fixed; padding-top=20px;">
                        <thead>
                            <tr>
                                <th width="30px"
                                    style="background-color:#3498DB !important;border: 1px !important; border-style: solid !important; border-color: #fff; color:#fff !important; ">
                                    <center>
                                        توقيع البائع
                                    </center>
                                </th>
                                <th width="30px"
                                    style="background-color:#3498DB !important;border: 1px !important; border-style: solid !important; border-color: #fff; color:#fff !important; ">

                                    <center>
                                        توقيع المشتري
                                    </center>
                                </th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </t>

        </template>


    </data>
</odoo>
